        <TableView fx:id="reservationTableView" layoutX="156.0" layoutY="253.0" prefHeight="342.0" prefWidth="536.0">
            <columns>
                <TableColumn fx:id="reservationIdColumn" prefWidth="111.0" text="Reservation ID" />
                <TableColumn fx:id="reservationVolIdColumn" prefWidth="114.0" text="Vol ID" />
                <TableColumn fx:id="reservationUserIdColumn" prefWidth="149.0" text="User ID" />
                <TableColumn fx:id="reservationTotalPriceColumn" prefWidth="161.0" text="Total Price" />
                <TableColumn fx:id="reservationPaymentMethodColumn" prefWidth="161.0" text="Payment Method" />
