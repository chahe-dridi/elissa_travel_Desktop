        </TableView>
        <TextField fx:id="newReservationVolIdField" layoutX="749.0" layoutY="300.0" promptText="Vol ID" />
        <TextField fx:id="newReservationUserIdField" layoutX="749.0" layoutY="368.0" promptText="User ID" />
        <TextField fx:id="newReservationTotalPriceField" layoutX="749.0" layoutY="424.0" promptText="Total Price" />
        <TextField fx:id="newReservationPaymentMethodField" layoutX="749.0" layoutY="487.0" promptText="Payment Method" />
