<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.elissa.Controller.ReservationVolController">

    <Button text="My Reservations"
            fx:id="reserveButton"
            AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" onAction="#handleMyReservationsButtonClick"/>

    <!-- ScrollPane to contain the VBox -->
    <ScrollPane fx:id="scrollPane" prefHeight="600.0" prefWidth="600.0" AnchorPane.topAnchor="50.0" AnchorPane.rightAnchor="0.0">
        <!-- Content of the ScrollPane -->
        <VBox fx:id="flightContainer" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
            <!-- Flight entries will be dynamically added here -->
        </VBox>

    </ScrollPane>

</AnchorPane>
