<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@airport.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elissa.Controller.FlightclassController">
    <children>
        <TableView fx:id="flightclassTableView" layoutX="446.0" layoutY="154.0" prefHeight="342.0" prefWidth="603.0">
            <columns>
                <TableColumn fx:id="IdColumn" prefWidth="70.0" text="Id" />

                <TableColumn fx:id="classNameColumn" prefWidth="138.0" text="Class Name" />
                <TableColumn fx:id="descriptionColumn" prefWidth="203.0" text="Description" />
                <TableColumn fx:id="priceColumn" prefWidth="84.0" text="Price" />
                <TableColumn fx:id="ticketNumberColumn" prefWidth="105.0" text="Ticket Number" />
            </columns>
        </TableView>
        <TextField fx:id="newClassNameField" layoutX="488.0" layoutY="521.0" promptText="Class Name" />
        <TextField fx:id="newDescriptionField" layoutX="488.0" layoutY="585.0" promptText="Description" />
        <TextField fx:id="newPriceField" layoutX="788.0" layoutY="521.0" promptText="Price" />
        <TextField fx:id="newTicketNumberField" layoutX="788.0" layoutY="585.0" promptText="Ticket Number" />
        <Button fx:id="newFlightClassAButton" layoutX="1060.0" layoutY="154.0" mnemonicParsing="false" onAction="#handleNewFlightclassButton" prefHeight="40.0" prefWidth="103.0" text="Add" />
        <Button fx:id="deleteFlightClassButton" layoutX="1060.0" layoutY="285.0" mnemonicParsing="false" onAction="#handleDeleteFlightclassButton" prefHeight="40.0" prefWidth="103.0" text="Delete" />
        <Button fx:id="updateFlightClassButton" layoutX="1060.0" layoutY="220.0" mnemonicParsing="false" onAction="#handleModifyFlightclassButton" prefHeight="40.0" prefWidth="103.0" text="Update" />


        <Button layoutX="446.0" layoutY="70.0" mnemonicParsing="false" onAction="#handleAirportsButtonClick" text="Airports" />
        <Button layoutX="600.0" layoutY="70.0" mnemonicParsing="false" onAction="#handleFlightsButtonClick" text="Flights" />
        <Button layoutX="751.0" layoutY="70.0" mnemonicParsing="false" onAction="#handleFlightClassButtonClick" text="FlightClass" />
        <Button layoutX="904.0" layoutY="70.0" mnemonicParsing="false" onAction="#handleReservationButtonClick" text="Reservation" />

    </children>
</AnchorPane>
